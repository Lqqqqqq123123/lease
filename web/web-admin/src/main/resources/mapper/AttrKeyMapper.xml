<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atguigu.lease.web.admin.mapper.AttrKeyMapper">


    <resultMap id="AttrKeysWithValues" type="com.atguigu.lease.web.admin.vo.attr.AttrKeyVo">
        <id column="id" property="id"></id>
        <result column="name" property="name"></result>
        <collection property="attrValueList" ofType="com.atguigu.lease.model.entity.AttrValue">
            <id column="av_id" property="id"></id>
            <result column="av_name" property="name"></result>
            <result column="attr_key_id" property="attrKeyId"></result>
        </collection>
    </resultMap>

    <select id="listWithValues" resultMap="AttrKeysWithValues">
        select ak.id, ak.name, av.id as av_id, av.name as av_name, av.attr_key_id
        from attr_key ak left join attr_value av
        on ak.id = av.attr_key_id and av.is_deleted=0
        where ak.is_deleted=0
    </select>
</mapper>
